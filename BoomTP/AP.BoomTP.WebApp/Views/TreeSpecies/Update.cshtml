@using AP.BoomTP.WebApp.ViewModels.TreeSpecies
@using AP.BoomTP.Application.CQRS.TasksCQRS
@model UpdateTreeSpeciesViewModel
@{
    Layout = "_Layout";
    ViewBag.Title = "TreeSpecies - Update";
}

<form method="post" asp-controller="TreeSpecies" asp-action="Update" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name">Naam</label>
        <input class="form-control" asp-for="Name">
    </div>
    <div class="form-group">
        <label asp-for="MaintenanceInstructions">Onderhouds Instructies</label>
        <input class="form-control" asp-for="MaintenanceInstructions">
    </div>
    <div class="form-group">
        <label asp-for="ImageUrl" class="control-label">Afbeelding</label>
        <input class="form-control" asp-for="ImageUrl">
    </div>
    <div class="form-group">
        <label asp-for="TaskId">Taken</label>
        <select id="TaskId" name="TaskId" multipleclass="form-control" multiple>
            <option value="">Kies taken</option>
            @foreach (TasksDTO task in Model.Tasks)
            {
                <option value="@task.Id">@task.Title</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
@section scripts{
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js"></script>


    <script>

        $(function () {
            $("#TaskId").select2({
                placeholder: "Kies taken",
            });
        });
    </script>
}